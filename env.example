# Crusoe Cloud API Configuration
CRUSOE_API_TOKEN=your_crusoe_api_token_here
CRUSOE_ORG_ID=your_organization_id_here
CRUSOE_BASE_URL=https://api.crusoecloud.com/v1alpha5

# Splunk HTTP Event Collector Configuration
SPLUNK_HEC_TOKEN=your_splunk_hec_token_here
SPLUNK_HEC_URL=https://your-splunk-instance.com:8088/services/collector
SPLUNK_INDEX=your_index_name
SPLUNK_SOURCETYPE=crusoe:audit
SPLUNK_SOURCE=crusoe_api
SPLUNK_VERIFY_SSL=true

# Application Configuration
BATCH_SIZE=100
REQUEST_TIMEOUT=30
MAX_RETRIES=3
